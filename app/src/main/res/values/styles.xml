<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="base_image_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="image_button_big_bg" parent="base_image_button_style">
        <item name="android:background">@drawable/circle</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="record" parent="image_button_big_bg">
        <item name="android:src">@drawable/baseline_mic_black_48</item>
    </style>

    <style name="pause" parent="image_button_big_bg">
        <item name="android:src">@drawable/baseline_pause_black_48</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="image_button_small_bg" parent="base_image_button_style">
        <item name="android:background">@drawable/save_or_delete</item>
        <item name="android:tint">@color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="save" parent="image_button_small_bg">
        <item name="android:src">@drawable/baseline_save_black_18</item>
    </style>

    <style name="rename_file" parent="image_button_small_bg">
        <item name="android:src">@drawable/baseline_edit_black_18</item>
    </style>

    <style name="rename" parent="image_button_small_bg">
        <item name="android:src">@drawable/baseline_send_black_24</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="delete" parent="image_button_small_bg">
        <item name="android:src">@drawable/baseline_delete_black_18</item>
    </style>

    <style name="card_view_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_view_margin_2dp</item>
        <item name="android:padding">@dimen/padding_5dp</item>
    </style>

    <style name="list_image_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/padding_16dp</item>
        <item name="android:src">@drawable/play</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="list_item_base_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tabTextColor</item>
    </style>

    <style name="file_name_text_view_style" parent="list_item_base_text_view_style">
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="file_length_text_view_style" parent="list_item_base_text_view_style">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="custom_name_edit_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
    </style>

    <style name="audio_timer_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/seek_bar</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="seek_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:layout_below">@+id/file_name_container_linear_layout</item>
        <item name="android:thumbTint">@color/white</item>
        <!--<item name="android:progressDrawable">@drawable/seek_bar_progress</item>-->
    </style>

    <style name="audio_player_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="cancel_playing_audio" parent="audio_player_button">
        <item name="android:src">@drawable/close_dialog</item>
    </style>

    <style name="play_audio" parent="audio_player_button">
        <item name="android:src">@drawable/play</item>
    </style>

    <style name="horizontal_linear_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="now_playing_file_name_text_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="base_action_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="action_delete" parent="base_action_style">
        <item name="android:tint">@color/colorRed</item>
        <item name="android:src">@drawable/ic_info_outline</item>
    </style>

    <style name="action_edit" parent="base_action_style">
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:src">@drawable/ic_edit</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
    </style>
</resources>
