<?xml version="1.0" encoding="utf-8"?>
<com.javarank.voice_recorder.recorder.ui.customview.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    app:dragFromEdge="right">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_20dp"
            android:paddingStart="@dimen/padding_20dp">

            <ImageButton
                android:id="@+id/delete_image_button"
                style="@style/action_delete" />

            <ImageButton
                android:id="@+id/edit_image_button"
                style="@style/action_edit"/>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/outer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            style="@style/card_view_style"
            app:cardCornerRadius="@dimen/card_view_corner_radius_4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_8dp">

                <ImageView style="@style/list_image_icon_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_name_text_view"
                        style="@style/file_name_text_view_style"
                        android:text="File Name" />

                    <TextView
                        android:id="@+id/item_length_text_view"
                        style="@style/file_length_text_view_style"
                        android:text="File Name" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</com.javarank.voice_recorder.recorder.ui.customview.SwipeRevealLayout>

